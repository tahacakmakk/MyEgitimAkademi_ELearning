@model List<MyElearningProject.DAL.Entities.Student>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block ">
                <h4 class="card-title">Öğrenci Listesi</h4>
                <table class="table">
                    <tr>
                        <th>#</th>
                        <th>Adı Soyadı</th>
                        <th>E Mail</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Kurslar</th>
                    </tr>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center text-danger ">Öğrenci bulunamadı !</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.StudentID</td>
                                <td>@item.Name @item.Surname</td>
                                <td>@item.Email</td>
                                <td><a href="/Student/DeleteStudent/@item.StudentID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Student/UpdateStudent/@item.StudentID" class="btn btn-outline-primary">Güncelle</a></td>
                                <td><a href="/Student/UpdateStudent/@item.StudentID" class="btn btn-outline-info">Kurslar</a></td>
                            </tr>
                        }
                    }
                </table>
    
                <a href="/Student/AddStudent/" class="btn btn-outline-success">Yeni Öğrenci Girişi<i class="mdi mdi-plus-outline"></i></a>
            </div>
        </div>
    </div>
</div>



