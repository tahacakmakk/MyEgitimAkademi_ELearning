@model List<MyElearningProject.DAL.Entities.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row pt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-block ">
                <h3 class="card-title">Hizmet Listesi</h3>
                <table class="table">
                    <tr>
                        <th>#</th>
                        <th>Başlık </th>
                        <th>Açıklama</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center text-danger ">Hizmet bulunamadı !</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-primary">Güncelle</a></td>
                            </tr>
                        }
                    }
                </table>

                <a href="/Service/AddService/" class="btn btn-outline-success">Yeni Hizmet Girişi</a>
            </div>
        </div>
    </div>
</div>



