@model List<MyElearningProject.DAL.Entities.Instructor>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="row pt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-block ">
                <h4 class="card-title">Eğitmen Listesi</h4>

                <table class="table ">
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Eğitmen Adı Soyadı</th>
                        <th>Sil </th>
                        <th>Güncelle</th>
                        <th>Kurslar</th>
                        <th>Sitede Gör</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr style=" vertical-align: baseline;">
                            <td>@item.InstructorID</td>
                            <td style="max-width:150px;"><img src="@item.ImageUrl" class="rounded-circle" style="max-width: 100px; border-radius: 50%;" /></td>
                            <td>@item.Name @item.Surname</td>
                            <td><a href="/Instructor/DeleteInstructor/@item.InstructorID" class="btn btn-outline-danger"><i class="mdi mdi-delete-empty"></i> Sil</a></td>
                            <td><a href="/Instructor/UpdateInstructor/@item.InstructorID" class="btn btn-outline-primary"><i class="mdi mdi-update"></i> Güncelle</a></td>
                            <td><a href="/Instructor/#/@item.InstructorID" class="btn btn-outline-success"><i class="mdi mdi-library-books"></i> Kurslar</a></td>
                            <td><a href="/About/Index" class="btn btn-outline-info"> Sitede Gör <i class="mdi mdi-arrow-right"></i></a></td>
                        </tr>
                    }
                </table>
                <a href="/Instructor/AddInstructor/" class="btn btn-outline-success"> Yeni Eğitmen Girişi <i class="mdi mdi-plus-outline"></i></a>
            </div>
        </div>
    </div>
</div>



