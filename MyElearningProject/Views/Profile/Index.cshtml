@using MyElearningProject.DAL.Entities
@model Student

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card-block">
    <form method="post">
        <input type="hidden" name="StudentID" />
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" name="Name" value="@ViewBag.name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" name="Surname" value="@ViewBag.surname" class="form-control" />
        </div>
        <div class="form-group">
            <label>Mail Adresiniz</label>
            <input type="text" name="Email" value="@ViewBag.mail" class="form-control" />
        </div>
        <div class="form-group">
            <label>Şifreniz</label>
            <input type="text" name="Password"  class="form-control" />
        </div>
        <button class="btn btn-outline-primary"> Güncelle</button>
    </form>
</div>

