@model MyElearningProject.DAL.Entities.Testimonial
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="card-block pt-5">
    <h3>Referans Ekle</h3>
    <hr />
    <form class="" method="post">
        <div class="form-group">
            <label>Ad Soyad</label>
            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Unvan</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Resim </label>
            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Yorum </label>
            @Html.TextAreaFor(x => x.Comment,3,3, new { @class = "form-control" })
        </div>
        <button class="btn btn-outline-primary"> Referans Ekle</button>
    </form>
</div>


